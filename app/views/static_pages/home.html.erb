<% if signed_in? %>
  <div class="row">
    <div class="span8">
      <h3><%= current_user.name %></h3>
      <%= render 'shared/feed' %>
    </div>
    <aside class="span4">
      <section>
        <h4>
          Make a post
        </h4>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      <section>
        <%= link_to 'location', location_path %>
      </section>
    </aside>

  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Leevitter</h1>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %>