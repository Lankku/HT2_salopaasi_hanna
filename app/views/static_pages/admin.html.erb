<% provide(:title, 'Help') %>
<h3>Create user</h3>
<div class="row">
  <div class="span6 offset3">
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Username" %>
      <%= f.text_field :name %>

      <%= f.label :note %>
      <%= f.text_field :note %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create User", class: "btn btn-large btn-primary" %>
    <% end %>
  <p>
    To inactivate/activate user and to delete user, see <%= link_to 'Users-page.', users_path %>
  </p>
</div>


